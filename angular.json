{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "if-viewport-size": {
      "projectType": "library",
      "root": "projects/if-viewport-size",
      "sourceRoot": "projects/if-viewport-size/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/if-viewport-size/tsconfig.lib.json",
            "project": "projects/if-viewport-size/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath" : "jest.config.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/if-viewport-size/tsconfig.lib.json",
              "projects/if-viewport-size/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "if-viewport-size"
}
